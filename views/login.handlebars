{{> nav}}
<div class="container main-card login-card mt-5">
  <div class="row d-flex justify-content-center login-card">
    <div class="card col-md address-input m-2 p-0 inner-card">
      <div class="card-body container">
        <div class="row d-flex justify-content-center">
          <div class="col d-flex flex-column align-items-center">
            <img src="/images/branding/circle-logo.svg" alt="login-logo" id="login-logo">            
          </div>
        </div>
        <hr>
        <form class="property-form login-form">
          <div class="row">
            <div class="col">
              <div class="form-group px-5">
                <label for="email">Email</label>
                <input type="email" id="email-login" class="form-control form-control-full" name="email" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="form-group px-5">
                <label for="password">Password</label>
                <input type="password" id="password-login" class="form-control form-control-full" name="password" />
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center mt-3">
            <div class="col-lg-8 col-md-10 col-sm-12">
              <div class="card-footer d-flex justify-content-center unit-submit">
                <button type='submit' id="login" class='btn btn-outline-dark m-2 p-3 next-btn'>Login</button>
              </div>
            </div>
          </div>
            <div>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="js/login.js"></script>